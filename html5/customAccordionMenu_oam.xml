                }

                .AccordionContent
                {
                  height:0px;
                  overflow:auto;
                  display:none;
                }

                .AccordionContainer
                {
                  border-top: solid 1px #C1C1C1;
                  border-bottom: solid 1px #C1C1C1;
                  border-left: solid 2px #C1C1C1;
